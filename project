def caractLigne(l):
    compt = 0
    while compt < len(l):
        if l[compt] == 0:
            print("-" ,end="     ")
        elif l[compt] == 1:
            print("X" ,end="     ")
        elif l[compt] == 2:
            print("O" ,end="     ")
        compt += 1

    print("\n")

#testLigne([0,0,2,0,1,0])


def caractGrille(g):
    for l in g:
        caractLigne(l)

